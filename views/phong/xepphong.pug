doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Xếp phòng
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý phòng
              li.breadcrumb-item.active 
                a(href='#') Xếp phòng
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
      .card(style='width: 100%;')
        .card-body
            .row 
                .col-md-6
                    .input-group.mb-3
                        .input-group-prepend
                            label.input-group-text(for='inputGroupSelect01',style = "color:red; font-weight:bold") Rạp chiếu
                        select#inputGroupSelect01.custom-select
                            option(selected='') Choose...
                            option(value='1') Rạp 1
                            option(value='2') Rạp 2
                            option(value='3') Rạp 3
            .row 
                .col-md-6
                    .input-group.mb-3
                        .input-group-prepend
                            label.input-group-text(for='inputGroupSelect01',style = "color:red; font-weight:bold") Phòng
                        select#inputGroupSelect01.custom-select
                            option(selected='') Choose...
                            option(value='1') Phòng 1
                            option(value='2') Phòng 2
                            option(value='3') Phòng 3
            .row
                .col-md-6
                    .input-group.mb-3
                        .input-group-prepend
                            label.input-group-text(for='inputGroupSelect01',style = "color:red; font-weight:bold")  Phim 
                        select#inputGroupSelect01.custom-select
                            option(selected='') Choose...
                            option(value='1') Rạp 1
                            option(value='2') Rạp 2
                            option(value='3') Rạp 3
            .row 
                .col-md-6
                    .input-group.mb-3
                        .input-group-prepend
                            label.input-group-text(for='inputGroupSelect01',style = "color:red; font-weight:bold") Lịch chiếu
                        select#inputGroupSelect01.custom-select
                            option(selected='') Choose...
                            option(value='1') Lịch chiếu: 04/06/2021
                            option(value='2') Lịch chiếu: 05/06/2021
                            option(value='3') Lịch chiếu: 06/06/2021
            .row
                .col-md-6
                    .input-group.mb-3
                        .input-group-prepend
                            label.input-group-text(for='inputGroupSelect01',style = "color:red; font-weight:bold")  Suất chiếu 
                        select#inputGroupSelect01.custom-select
                            option(selected='') Choose...
                            option(value='1') 19:00
                            option(value='2') 22:00
                            option(value='3') 23:00

      .card
        .card-body
            .row
              .col(style="display:flex; justify-content:center;")
                  button.btn.btn-success(id="btnsubmit",style="width:200px;",type='submit') Thêm
              .col(style="display:flex; justify-content:center;")
                  button.btn.btn-dark(style="width:200px;",type='button', id="btnhuy") Hủy bỏ
              
    // /.content
  // /.content-wrapper
  include ../footer.pug
