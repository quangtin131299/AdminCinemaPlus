doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Danh sách phòng
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý phòng
              li.breadcrumb-item.active 
                a(href='#') Danh sách phòng
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
      .card(style='width: 100%;')
        .card-body
            .row
                .col-md-6 
                  select#inputGroupSelect02.custom-select(name="dropdownCinema")
                      option(selected='') Chọn rạp chiếu
                      each itemCinema in cinemas
                        option(value=itemCinema.ID)= itemCinema.TenRap

                .col-md-2
                  button.btn.btn-success.width-btn(id="btnFilter",type='submit', onclick="sendIdCinema()") Lọc
            <br>
            table.table.table-bordered
                thead
                    th(scope='col') Mã phòng
                    th(scope='col') Tên phòng
                tbody#tblBody
                    each itemRoom in rooms
                      tr
                          td= itemRoom.ID
                          td= itemRoom.TenPhong

      #exampleModalCenter.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
          .modal-dialog.modal-dialog-centered
            .modal-content.dialog-loading
              .modal-body
                .d-flex.justify-content-center.align-item-center
                  .spinner-border(role='status')
                    span.sr-only Loading...
              
    // /.content
  // /.content-wrapper
  include ../footer.pug
// ./wrapper
