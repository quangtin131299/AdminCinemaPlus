doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Danh sách đặt vé
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý vé
              li.breadcrumb-item.active 
                a(href='#') Danh sách đặt vé
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
      table.table
        thead
          tr
            th(scope='col') ID
            th(scope='col') Ngày đặt
            th(scope='col') Họ tên
            th(scope='col') Trạng thái
            th(scope='col') Thao tác 
        tbody
          each ticker in danhsachticker
            tr
              th(scope='row')=ticker.ID
              td=ticker.NgayDat
              td=ticker.HoTen
              td=ticker.TrangThai
              td
                span 
                  a(href="#") Chi Tiết 
                span
    // /.content
  // /.content-wrapper
  include ../footer.pug
// ./wrapper
