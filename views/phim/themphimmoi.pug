doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Thêm phim
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý phim chiếu
              li.breadcrumb-item.active 
                a(href='#') Thêm phim
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content  
      form(action="themphim", method="post",enctype="multipart/form-data", id="formAddMovie")  
        .card
            .card-body
              .row
                 h5(style="font-weight:bold;") Thông tin phim
              .row
                .col
                  .input-group.mb-3
                        .input-group-prepend
                            span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") Tên phim
                        input.form-control(name= "txttenphim", placeholder="Nhập tên phim",type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default')
              .row
                .col
                    .input-group.mb-3
                        .input-group-prepend
                            span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") Ngày khởi chiếu
                        input.form-control(id="txtngaykhoichieu",name= "txtngaykhoichieu",type='date', aria-label='Default', aria-describedby='inputGroup-sizing-default')
                .col
                    .input-group.mb-3
                        .input-group-prepend
                            span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") Ngày kết thúc
                        input.form-control(id="txtNgayKetThuc",name= "txtNgayKetThuc",type='date', aria-label='Default', aria-describedby='inputGroup-sizing-default')
              .row
                    .col
                        .input-group.mb-3
                            .input-group-prepend
                                span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") Thời lượng
                            input.form-control(name="txtthoigian", placeholder="Nhập thời lượng phim (Phút)", type='number',min=1, aria-label='Default', aria-describedby='inputGroup-sizing-default')
                    .col
                        .input-group.mb-3
                            .input-group-prepend
                                label.input-group-text(style = "color:red; font-weight:bold",for='inputGroupSelect01') Trạng thái của phim
                            select#inputGroupSelect01.custom-select(name="cboxtrangthai")
                                option(selected='',value='Sắp chiếu') Sắp chiếu
                                
                    .col
                        .input-group.mb-3
                            .input-group-prepend
                                span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") ID Trailer
                            input.form-control(name="txtIDtrailer",placeholder ="Nhập ID video trailer từ Youtube", type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default')
              .row
                    .col
                        .input-group.mb-3
                            .input-group-prepend
                                label.input-group-text(style = "color:red; font-weight:bold",for='inputGroupSelect01') Nhà cung cấp
                            select#inputGroupSelect02.custom-select(name="dropdownNhaCungCap")
                              option(selected='') Chọn nhà cung cấp
                              each itemSupplier in suppliers
                                option(value=itemSupplier.ID)= itemSupplier.TenNhaCungCap

              .row    
                    .col    
                        .input-group.mb-3
                            .input-group-prepend
                              span.input-group-text(style = "color:red; font-weight:bold") Poster
                            .custom-file
                              input.custom-file-input(id="inputGroupFile01", name="imgMovie", type='file',accept="image/png, image/gif, image/jpeg", onchange="setFileImageMovie(this)")
                              label.custom-file-label.file-name-image-movie(for='inputGroupFile01')

                        img(src="https://st4.depositphotos.com/14953852/24787/v/600/depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpg",  id="imgMoviePreview", width="150",height="150")
              <br>
              .row    
                    .col    
                        .input-group.mb-3
                            .input-group-prepend
                              span.input-group-text(style = "color:red; font-weight:bold") Hình phim
                            .custom-file
                              input.custom-file-input(id="inputGroupFile01", name="imgPoster", type='file',accept="image/png, image/gif, image/jpeg", onchange="setFileImagePoster(this)")
                              label.custom-file-label.file-name-image-poster(for='inputGroupFile01') 

                        img(src="https://st4.depositphotos.com/14953852/24787/v/600/depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpg",  id="imgMoviePoster", width="150",height="150")  

        .card
            .card-body
              .row
                h5(style="font-weight:bold;") Thể loại phim
              .row  
                .col 
                    each itemMovieType in movieTypes
                      .form-check.form-check-inline
                        input#inlineCheckbox1.form-check-input(type='checkbox',name= "chbloai", value=itemMovieType.ID)
                        label.form-check-label(id=itemMovieType.ID,for='inlineCheckbox1')=itemMovieType.TenLoai

        .card
            .card-body
              .row
                h5(style="font-weight:bold;") Phim được chiếu ở rạp
              .row  
                .col 
                    each itemCinema in cinemas
                      .form-check.form-check-inline
                        input#inlineCheckbox1.form-check-input(type='checkbox',name= "chbCinema", value=itemCinema.ID)
                        label.form-check-label(id=itemCinema.ID,for='inlineCheckbox1')=itemCinema.TenRap
        .card
            .card-body
              .row
                h5(style="font-weight:bold;") Mô tả phim 
              .row
                textarea.width-texarea(id="txtmota", name="txtDescription")
            
        .card
            .card-body
              .row
                .col(style="display:flex; justify-content:center;")
                    button.btn.btn-dark.width-btn(type='button', id="btnhuy") Hủy bỏ
                .col(style="display:flex; justify-content:center;")
                    button.btn.btn-success.width-btn(type='button', id="btnSubmit", onclick="onSubmitAddMovie()") Thêm phim
      
      #exampleModalCenter.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
        .modal-dialog.modal-dialog-centered
          .modal-content.dialog-loading
            .modal-body
              .d-flex.justify-content-center.align-item-center
                .spinner-border(role='status')
                  span.sr-only Loading...

      #notifyModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title Thông báo
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') &times;
            .modal-body
              span#modalTextMessage= messNotify
            .modal-footer
              button.btn.btn-primary(type='button' id='btnOK') Ok

                     
    // /.content
  // /.content-wrapper
  include ../footer.pug
