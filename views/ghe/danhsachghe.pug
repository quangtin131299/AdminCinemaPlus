doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Danh sách ghế
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý ghế
              li.breadcrumb-item.active 
                a(href='#') Danh sách ghế
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
      .row
        .col-md-6
          .card(style='width: 100%;')
            .card-body
              h4 Thêm ghế mới
              .input-group.mb-3
                  .input-group-prepend
                      span#inputGroup-sizing-default.input-group-text(style="font-weight: bold; color:red;") Tên ghế
                  input.form-control(name='txtIdCinema' ,type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default') 
              .btn-add-seat-container
                button.btn.btn-dark.btn-add-back-to Hủy bỏ
                button.btn.btn-success Thêm ghế
        .col-md-6
          .card(style='width: 100%;')
            .card-body
              h4 Tìm kiếm ghế

      .card(style='width: 100%;')
        .card-body
          table.table.table-bordered
              thead
                th(scope='col') Mã ghế
                th(scope='col') Tên ghế
                th(scope='col') Trạng thái
                th(scope='col')
              tbody
                each seat in seats 
                  tr
                    td= seat.ID
                    td= seat.TenGhe
                    td
                      select#exampleFormControlSelect1.form-control
                        option Trống
                        option Đã đặt
                        option Bị hư
                    td
                      button.btn.btn-success Cập nhật
                          

              
    // /.content
  // /.content-wrapper
  include ../footer.pug
