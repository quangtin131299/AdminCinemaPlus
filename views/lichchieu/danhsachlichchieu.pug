doctype html
include ../header.pug
link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@5.8.0/main.min.css')
script(src='https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@5.8.0/main.min.js')
script(src="https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/locales-all.js")
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Danh sách lịch chiếu
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý lịch chiếu
              li.breadcrumb-item.active 
                a(href='#') Danh sách lịch chieu
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content.container-intro-schedule
      each item in cinemas
        .card.card-schedule-cinema
          .card-body
            .row
              .col-md-12 
                .row
                  .col-md-10
                    h4= item.nameCinema
                  .col-md-2
                    a.btn.btn-primary(href=`/lichchieu/xeplichV2?idCinema=${item.idCinema}`) Xếp lịch
                .row
                  .col-md-12
                    div(id=`calendar${item.idCinema}`, style="width: 800px")
            br
          
                    
    // /.content
  // /.content-wrapper
  include ../footer.pug
// ./wrapper
