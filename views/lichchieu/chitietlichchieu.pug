doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Chi tiết lịch chiếu ngày 
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý lịch chiếu
              li.breadcrumb-item
                a(href='#') Danh sách lịch chieu
              li.breadcrumb-item.active 
                a(href='#') Chi tiết lịch chiếu
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
      .row
          .col-md-4(style="display: flex; flex-direction: column; align-items: center;justify-content: center;")
                img(src='https://img.icons8.com/plasticine/100/000000/overtime.png', width=300, height=300)
          .col-lg-8
           .card
            .card-body
               table.table
                    thead
                    tr
                        th(scope='col') Poster
                        th(scope='col') Tên phim 
                        th(scope='col') Suất chiếu
                    tbody
                        each ctlc in danhsachphimsuat
                         tr
                            td(width=100)
                                img(src=ctlc.Hinh, alt="photo",width=110, height=110)
                            td(width=230)=ctlc.TenPhim
                            td(style="display:flex; flex-wrap: wrap;")
                                each suatchieu in ctlc.suatchieu
                                  .card(style='width: 100px;  margin-right: 8px; background-color: #EEEEEE;')
                                        .card-body
                                            p.card-text
                                                =suatchieu.gio

                                   
                
    // /.content
  // /.content-wrapper
  include ../footer.pug
// ./wrapper
