.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Xếp lịch
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý lịch chiếu
              li.breadcrumb-item.active 
                a(href='#') Xếp lịch
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
        .container-fluid
            .row
                .col-md-3
                    .sticky-top.mb-3
                    .card
                        .card-header
                            h4.card-title B&#x1EA3;ng ghi ch&uacute;
                        .card-body
                            // the events
                            #external-events
                                .external-event.bg-success Lunch
                                .external-event.bg-warning Go home
                                .external-event.bg-info Do homework
                                .external-event.bg-primary Work on UI design
                                .external-event.bg-danger Sleep tight
                                .checkbox
                                label(for='drop-remove')
                                    input#drop-remove(type='checkbox')
                                    |                         Lo&#x1EA1;i b&#x1ECF; sau khi th&#x1EA3;
                        // /.card-body
                    // /.card
                    .card
                        .card-header
                            h3.card-title T&#x1EA1;o s&#x1EF1; ki&#x1EC7;n ghi ch&uacute;
                        .card-body
                            .btn-group(style='width: 100%; margin-bottom: 10px;')
                                // <button type="button" id="color-chooser-btn" class="btn btn-info btn-block dropdown-toggle" data-toggle="dropdown">Color <span class="caret"></span></button>
                                ul#color-chooser.fc-color-picker
                                    li
                                        a.text-primary(href='#')
                                        i.fas.fa-square
                                    li
                                        a.text-warning(href='#')
                                        i.fas.fa-square
                                    li
                                        a.text-success(href='#')
                                        i.fas.fa-square
                                    li
                                        a.text-danger(href='#')
                                        i.fas.fa-square
                                    li
                                        a.text-muted(href='#')
                                        i.fas.fa-square
                            // /btn-group
                            .input-group
                                input#new-event.form-control(type='text' placeholder='Tiêu đề sự kiện')
                                .input-group-append
                                    button#add-new-event.btn.btn-primary(type='button') Th&ecirc;m
                                // /btn-group
                            // /input-group
                // /.col
                .col-md-9
                    .card.card-primary
                        .card-body.p-0
                            // THE CALENDAR
                            #calendar
                        // /.card-body
                    // /.card
                // /.col
            // /.row
        // /.container-fluid
    // /.content
    // /.content-wrapper
