doctype html
include ../header.pug
link(rel='stylesheet', href='plugins/fullcalendar/main.min.css')
link(rel='stylesheet', href='plugins/fullcalendar-daygrid/main.min.css')
link(rel='stylesheet', href='plugins/fullcalendar-timegrid/main.min.css')
link(rel='stylesheet', href='plugins/fullcalendar-bootstrap/main.min.css')
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Xếp lịch
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý lịch chiếu
              li.breadcrumb-item.active 
                a(href='#') Xếp lịch
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
        .container-fluid
            .row
                .col-md-3
                    .sticky-top.mb-3
                    .card
                        .card-header
                            h4.card-title Lịch chiếu theo Rạp
                        .card-body
                            // the events
                            #external-events
                                //- .external-event.bg-success Cô gái đến từ hôm qua | Phòng 1
                                //- .external-event.bg-warning Chiến binh hồi sinh | Phòng 2
                                //- .external-event.bg-info Quái vật săn đêm | Phòng 2
                                //- .external-event.bg-primary Ròm | Phòng 4
                                //- .external-event.bg-danger Tiệc trăng máu | Phòng 3
                                //- .checkbox
                                //- label(for='drop-remove')
                                //-     input#drop-remove(type='checkbox')
                                //-     | Loại bỏ sau khi thả
                                select#inputGroupSelect02.custom-select(name="dropdownCinema", onchange="loadMovieOfCinema(this)")
                                    option(selected='') Chọn rạp chiếu
                                    each itemCinema in danhsachrap
                                      option(value=itemCinema.ID)= itemCinema.TenRap
                                
                        // /.card-body
                    // /.card
                    .card
                        .card-header
                            h3.card-title Thêm lịch chiếu
                        .card-body
                            select#inputGroupSelect02.custom-select(name="dropdownMovie")
                                option(selected='') Chọn phim
                                
                            <br>
                            //- select#inputGroupSelect02.custom-select(name="dropdownRoom")
                            //-     option(selected='') Chọn phòng
                            //-     each itemRoom in danhsachphong
                            //-       option(value=itemRoom.ID)= itemRoom.TenPhong
                            
                            .btn-group(style='width: 100%; margin-bottom: 10px;')
                                // <button type="button" id="color-chooser-btn" class="btn btn-info btn-block dropdown-toggle" data-toggle="dropdown">Color <span class="caret"></span></button>
                                ul#color-chooser.fc-color-picker
                                    li
                                        a.text-primary(href='#')
                                        i.fas.fa-square
                                    li
                                        a.text-warning(href='#')
                                        i.fas.fa-square
                                    li
                                        a.text-success(href='#')
                                        i.fas.fa-square
                                    li
                                        a.text-danger(href='#')
                                        i.fas.fa-square
                                    li
                                        a.text-muted(href='#')
                                        i.fas.fa-square
                            // /btn-group
                            .input-group
                                input#new-event.form-control(type='text' placeholder='Tiêu đề sự kiện')
                                .input-group-append
                                    button#add-new-event.btn.btn-primary(type='button') Thêm
                                // /btn-group
                            // /input-group
                // /.col
                .col-md-9
                    .card.card-primary
                        .card-body.p-0
                            // THE CALENDAR
                            #calendar
                        // /.card-body
                    // /.card
                // /.col
            // /.row
        // /.container-fluid
