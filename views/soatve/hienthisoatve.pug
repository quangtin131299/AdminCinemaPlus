doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Soát vé
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item.active 
                a(href='#') Soát vé
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content.secion-video
        .container-fluid.container-scan-qr
          .card.card-primary.card-video
              .card-body.p-0
                .row 
                  .col-md-12
                    h3.text-center.title-scan Quét mã QR hóa đơn
                .row
                    .col-md-12.video-container
                      video#preview.video-qr(width='300%')
                .row 
                  .col-md-12.content-qr-container
                    label.label-bill Mã hóa đơn:
                    input#text.form-control.input-content-scan(type='text' name='text' readonyy='' placeholder='scan qrcode')

              // /.card-body
          // /.card
              
        // /.container-fluid
        #notifyModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Thông báo
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                  span(aria-hidden='true') &times;
              .modal-body
                span#modalTextMessage
              .modal-footer
                button.btn.btn-primary(type='button' id='btnOK') Ok
      
    // /.content
  // /.content-wrapper
  include ../footer.pug
// ./wrapper
