doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Danh sách dịch vụ
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý dịch vụ
              li.breadcrumb-item.active 
                a(href='#') Danh sách dịch vụ
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
      table.table
        thead
          tr
            th(scope='col') STT
            th(scope='col') Tên dịch vụ
            th(scope='col') Ảnh
            th(scope='col') Mô tả
            th(scope='col') Đơn giá 
            th(scope='col') Thao tác 
        tbody
          each bapnuoc in danhsachdichvu
            tr
              th(scope='row')=bapnuoc.ID
                  td=bapnuoc.TenCombo
                  td
                    img(src=bapnuoc.Hinh, alt="photo", width=100, height=100)
                  td=bapnuoc.MoTa
                  td=bapnuoc.DonGia + " VND"
                  td
                    span 
                      a(href="suadichvu?idService=" + bapnuoc.ID) Sửa
                    span  |
                    span 
                      a(href="#") Xóa
    // /.content
  // /.content-wrapper
  include ../footer.pug
// ./wrapper
