doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='index3.html') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Thêm nhà cung cấp
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='#') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý nhà cung cấp
              li.breadcrumb-item.active 
                a(href='#') Thêm nhà cung cấp
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content     
        nav
            #nav-tab.nav.nav-tabs(role='tablist')
                a#nav-home-tab.nav-item.nav-link.active(data-toggle='tab' href='#nav-home' role='tab' aria-controls='nav-home' aria-selected='true') Thêm một nhà cung cấp
                a#nav-profile-tab.nav-item.nav-link(data-toggle='tab' href='#nav-profile' role='tab' aria-controls='nav-profile' aria-selected='false') Tải file nhà cung cấp
            #nav-tabContent.tab-content
                #nav-home.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='nav-home-tab')
                  form(action='/nhacungcap/themnhacungcap', method="post", id='formAddSuppliers')
                    .card(style='width: 100%;')
                        .card-body
                            .row
                                h5(style="font-weight:bold;") Thông tin nhà cung cấp
                            .row
                                .col
                                    .input-group.mb-3
                                        .input-group-prepend
                                            span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") Tên nhà cung cấp
                                        input.form-control#txtSupplierName(name= "txtSupplierName", placeholder="Nhập tên nhà cung cấp",type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default')
                            .row
                                .col
                                    .input-group.mb-3
                                        .input-group-prepend
                                            span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") Địa chỉ 
                                        input.form-control#txtAddress(name= "txtAddress", placeholder="Nhập địa chỉ",type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default')
                            .row 
                                .col
                                    .input-group.mb-3
                                        .input-group-prepend
                                            span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") Số điện thoại
                                        input.form-control#txtPhoneNumber(name= "txtPhoneNumber", placeholder="Nhập số điện thoại",type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default')
                            .row
                                .col 
                                    .input-group.mb-3
                                        .input-group-prepend
                                            span#inputGroup-sizing-default.input-group-text(style = "color:red; font-weight:bold") Email
                                        input.form-control#txtEmail(name= "txtEmail", placeholder="Nhập địa chỉ Email",type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default')
                            
                            .row
                                .col.btn-action-container
                                    button.btn.btn-success(id="btnsubmit",style="width:200px;",type='button') Thêm nhà cung cấp
                                .col.btn-action-container
                                    button.btn.btn-dark(style="width:200px;",type='button', id="btnhuy") Hủy bỏ

            #exampleModalCenter.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
                .modal-dialog.modal-dialog-centered
                  .modal-content.dialog-loading
                    .modal-body
                      .d-flex.justify-content-center.align-item-center
                        .spinner-border(role='status')
                          span.sr-only Loading...

            #notifyModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
                .modal-dialog(role='document')
                  .modal-content
                    .modal-header
                      h5#exampleModalLabel.modal-title Thông báo
                      button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                    .modal-body
                      span#modalTextMessage= messNotify
                    .modal-footer
                      button.btn.btn-primary(type='button' id='btnOK') Ok   

                #nav-profile.tab-pane.fade(role='tabpanel' aria-labelledby='nav-profile-tab')
                    .card(style='width: 100%;')
                        .card-body
                            .row
                                .col
                                    .input-group.mb-3
                                        .input-group-prepend
                                            span.input-group-text(style = "color:red; font-weight:bold") File data nhà cung cấp
                                        .custom-file
                                            input.custom-file-input(id="inputGroupFile01", name="txthinh", type='file', multiple='')
                                            label.custom-file-label(for='inputGroupFile01') Choose file
                            .row
                                .col.btn-action-container
                                    button.btn.btn-success(id="btnsubmit",style="width:200px;",type='submit') Thêm nhà cung cấp
                                .col.btn-action-container
                                    button.btn.btn-dark(style="width:200px;",type='button', id="btnhuy") Hủy bỏ

                                    
                            
              
    // /.content
  // /.content-wrapper
  include ../footer.pug
