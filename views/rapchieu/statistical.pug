doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Thống kê rạp
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý rạp chiếu
              li.breadcrumb-item.active 
                a(href='#') Thống kê rạp
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
        .row
          .col-md-12
            .card.card-infor-cinema-statistical
              .row 
                .col-md-12.title-cinema-container
                  h5 Thông tin rạp
              br
              .row
                .col-md-4.img-cinema-statistical-container
                  img.img-cinema-statistical(src=cinema.Hinh)
                .col-md-8
                  .row
                    .col-md-12
                      .input-group.mb-3.input-id-cinema-statistical
                        .input-group-prepend
                          span#inputGroup-sizing-default.input-group-text Mã rạp
                        input.form-control(type='text', name='txtIdCinema',aria-label='Default', aria-describedby='inputGroup-sizing-default', readonly, value=cinema.ID)
                  .row
                    .col-md-12
                      .input-group.mb-3.input-id-cinema-statistical
                        .input-group-prepend
                          span#inputGroup-sizing-default.input-group-text Tên rạp
                        input.form-control(type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default', readonly, value=cinema.TenRap)
        .row
          .col-md-12
            .card.card-chart-cinema
              .row
                .col-md-12.chart-cinema-container
                  canvas#chart
                
              
        
    // /.content
  // /.content-wrapper
  include ../footer.pug
