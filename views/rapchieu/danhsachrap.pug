doctype html
include ../header.pug
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu', href='#', role='button')
          i.fas.fa-bars
      li.nav-item.d-none.d-sm-inline-block
        a.nav-link(href='/home') Trang chủ
    // SEARCH FORM
    form.form-inline.ml-3
      .input-group.input-group-sm
        input.form-control.form-control-navbar(type='search', placeholder='Search', aria-label='Search')
        .input-group-append
          button.btn.btn-navbar(type='submit')
            i.fas.fa-search
  // /.navbar
  // Main Sidebar Container
  include ../slidebar.pug
  // Content Wrapper. Contains page content
  .content-wrapper
    // Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0.text-dark Danh sách rạp chiếu
          // /.col
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Trang chủ
              li.breadcrumb-item
                a(href='#') Quản lý rạp chiếu
              li.breadcrumb-item.active 
                a(href='#') Danh sách rạp chiếu
          // /.col
        // /.row
      // /.container-fluid
    // /.content-header
    // Main content
    section.content
      table.table
        thead
          tr
            th(scope='col') STT
            th(scope='col') Tên rạp
            th(scope='col') Ảnh
            th(scope='col') Địa chỉ
            th(scope='col') Thao tác 
        tbody
          each rap in danhsachrapchieu
            tr
              th(scope='row')=rap.ID
              td=rap.TenRap
              td
                img(src=rap.Hinh, alt="photo", width=100, height=100)
              td=rap.DiaChi
              td
                span 
                  a(href="#") Chi Tiết 
                span |
                span 
                  a(href="#") Sửa
                span |
                span 
                  a(href="#") Xóa
      nav(style="display:flex; justify-content:center",aria-label='Page navigation example')
        ul.pagination
          li.page-item
            a.page-link(href='#') Trang trước
          - for (var i = 1; i <= soluongtrang ; i++) {
                if i == pagerespon
                  li.page-item.active
                   a.page-link(href="danhsachrapchieu?page=" + i)= i 
                else
                  li.page-item
                   a.page-link(href="danhsachrapchieu?page=" + i)= i
          - }
            
          li.page-item
            a.page-link(href='#') Trang kế
    // /.content
  // /.content-wrapper
  include ../footer.pug
// ./wrapper
